
    
    
        <%- include ("header.ejs") %>

        <%- include ("sidebar.ejs") %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Audit</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/superadmin">Dashboard</a></li>
                            <li class="breadcrumb-item active">Audit Logs</li>
                            
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        
                        <!-- Main content -->
                        <div class="invoice p-3 mb-3">
                            <div class="row">
                                <div class="col-12 table-responsive">
                                    <div style="width: max-content;" >
                                    
                                        <a class="custom-control custom-switchAging btn btn-success" href="#" onclick="downloadlogs('auditLogs.txt')">
                                        Download Text Logs
                                        </a>
                                      
                                      </div> <br>
                           


                                    <table id="example1" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Log ID</th>
                                                <th>User Role</th>
                                                <th>User Name</th>
                                                <th>Reason</th>
                                                <th>Acuity URL</th>
                                                <th>Created At</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% auditLogs.forEach(log => { %>
                                                <tr>
                                                    <td><%= log.log_id %></td>
                                                    <td><%= log.user_role %></td>
                                                    <td><%= log.user_name %></td>
                                                    <td><%= log.reason %></td>
                                                    <td><%= log.acuity_url %></td>
                                                    <td><%= new Date(log.created_at).toLocaleString() %></td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include ("footer.ejs") %>


    <script>
        
      function downloadlogs(reportName) {

const ExcelUrl = `/logs/auditLogs.txt`;
const link = document.createElement('a');
link.href = ExcelUrl;
link.download = `${reportName}`;
link.click();
}

    </script>