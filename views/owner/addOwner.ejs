function validateRequiredFields11() {
    const form = document.querySelector('#kilfrom'); // Target the form by its ID
    const inputs = form.querySelectorAll('input, select, textarea'); // Get all inputs
    let isValid = true;

    // Remove previous error messages and borders
    form.querySelectorAll('.error-message').forEach(errorMsg => errorMsg.remove());
    inputs.forEach(input => {
        input.style.border = ''; // Reset borders
    });

    const processedGroups = [];

    inputs.forEach(input => {
        // Add event listeners to clear errors when input changes
        input.addEventListener('input', () => {
            if (input.value.trim() || input.checked) {
                input.style.border = ''; // Remove red border
                const error = input.parentNode.querySelector('.error-message');
                if (error) error.remove(); // Remove error message
            }
        });

        // Validate text, textarea, and select inputs
        if (input.type === 'text' || input.type === 'textarea' || input.tagName.toLowerCase() === 'select') {
            if (input.required && !input.value.trim()) {
                isValid = false;
                input.style.border = '1px solid red'; // Highlight the required field
                addErrorMessage(input.parentNode, "This Field is Required.");
            }
        }

        // Validate checkboxes and radio buttons
        if (input.type === 'checkbox' || input.type === 'radio') {
            const name = input.name;

            // Skip if this group has already been validated
            if (processedGroups.includes(name)) return;
            processedGroups.push(name);

            const group = form.querySelectorAll(`input[name="${name}"]`);
            const checked = [...group].some(el => el.checked);
            const container = input.closest('.form-group') || input.closest('div');

            // Show a single error message if none are selected
            if (!checked) {
                isValid = false;
                group.forEach(input => {
                    input.style.border = '1px solid red'; // Highlight each checkbox/radio in the group
                });
                addErrorMessage(container, "Please select at least one option.");
            }
        }

        // Validate file inputs
        if (input.type === 'file') {
            // Check if a file is selected
            if (!input.files.length) {
                isValid = false;
                input.style.border = '1px solid red'; // Highlight the file input
                addErrorMessage(input.parentNode, "Please upload a file.");
            }
        }
    });

    return isValid;
}



